#----------------------- SpiderBot' MAKEFILE --------------------- 


# --- 1.- Options for base system ---


CC        = @CC@
LIBPATH   = -L/usr/lib
HPATH     = -I.. -I../lib/
SRCDIR    = ..
CFLAGS    = @DEVEL@ -Wall -D@OS@ -D_REENTRANT -D__UILIB__
LIBLINK   = ../lib/wpplib/wpplib.a ../lib/weblib/weblib.a ../lib/uilib/uilib.a ../lib/corelib/corelib.a @LIBLINK@


 
# --- 2.- library profile distribution -------

PROGNAME  = ./SpiderBot
OBJECT    = \
            $(SRCDIR)/SpiderBot/l_sbotopt.o       \
	    $(SRCDIR)/SpiderBot/l_sbotdl.o        \
	    $(SRCDIR)/SpiderBot/l_sbotcl.o        \
            $(SRCDIR)/SpiderBot/l_sbotmsg.o       \
            $(SRCDIR)/SpiderBot/l_sbotmnu.o       \
            $(SRCDIR)/SpiderBot/SpiderBot.o 

 

#--------------------------
# Reglas de compilacion ...
#-------------------------- 

all:      init  SpiderBot
refast:   clean SpiderBot
fast:     SpiderBot

SpiderBot:   $(OBJECT)
	@echo "   Linking :"
	@echo "     "$(PROGNAME)
	@$(CC)  $(CFLAGS) -o $(PROGNAME)   $(OBJECT) $(LIBLINK)
	@sync

init:
	@echo [2J 
	@echo "[1;1f" 
	@echo "" 
	@echo "    SpiderBot"
	@echo "   -----------" 
	@echo "" 
	@echo "   Computer  :"
	@echo "     "`uname -a` 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(HPATH)
	@echo "   Compiling :"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(HPATH) -c $< -o $@ 


clean: 
	@echo "   Removing trash..."
	@rm -fr $(OBJECT) 
	@rm -fr $(PROGNAME)
	@echo "   Trash succesfully removed !."



# ----------------------------------------------------------------

