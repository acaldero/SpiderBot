#-------------------------- 

all:    init  weblib.a
fast:   weblib.a

weblib.a:  $(OBJETOS)
	@echo "" 
	@echo "   Creando library :"
	@echo "     weblib.a ..." 
	@ar -rc $(LIBNAME)
	@ar -rs $(LIBNAME) $(OBJETOS)

init:
	@echo [2J 
	@echo "[1;1f" 
	@echo "" 
	@echo "    web libreries" 
	@echo "   ---------------" 
	@echo "" 
	@echo "   Computer  :"
	@echo "     "`uname -a` 
	@echo "   Options   :"
	@echo "     "$(CFLAGS)
	@echo "   Directory :"
	@echo "     "$(HPATH)
	@echo "   Compiling :"

%.o: %.c
	@echo -n -e "     $< ...                           \r" 
	@$(CC)  $(CFLAGS) $(HPATH) -c $< -o $@ 


clean: 
	@echo "   Removing trash..."
	@rm -fr $(OBJETOS) 
	@rm -fr $(LIBNAME)
	@echo "   Trash succesfully removed !."




